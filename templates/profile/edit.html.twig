{% extends 'base.html.twig' %}

{% block title %}Modifier mon Profil - MyBlog{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title mb-4">Modifier mon Profil</h2>

                {% if user.profilePicture %}
                    <div class="text-center mb-4">
                        <img src="{{ user.profilePicture }}" class="img-fluid rounded-circle" alt="{{ user.firstName }}" style="max-width: 150px; height: 150px; object-fit: cover;">
                    </div>
                {% endif %}

                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}

                    <div class="mb-3">
                        {{ form_label(form.firstName, 'Prénom') }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                        {% if form.firstName.vars.errors %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.firstName) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.lastName, 'Nom') }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                        {% if form.lastName.vars.errors %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.lastName) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.profilePicture, 'URL de la photo de profil') }}
                        {{ form_widget(form.profilePicture, {'attr': {'class': 'form-control'}}) }}
                        <small class="form-text text-muted">Entrez l'URL complète de votre image (par exemple : https://example.com/photo.jpg)</small>
                        {% if form.profilePicture.vars.errors %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.profilePicture) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="alert alert-info">
                        <strong>Note :</strong> Vous ne pouvez pas modifier votre email ou votre mot de passe depuis cette page.
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Enregistrer les modifications
                        </button>
                        <a href="{{ path('app_profile_show') }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>

        <div class="mt-4">
            <div class="card border-warning">
                <div class="card-body">
                    <h5 class="card-title">Options supplémentaires</h5>
                    <p class="card-text">Pour modifier votre mot de passe ou votre email, veuillez contacter un administrateur.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
