{% extends 'base.html.twig' %}

{% block title %}Accueil - MyBlog{% endblock %}

{% block body %}
<div class="row mb-5">
    <div class="col-lg-10 mx-auto">
        <div class="jumbotron bg-light p-5 rounded-lg m-0">
            <h1 class="display-4">Bienvenue sur MyBlog !</h1>
            <p class="lead">DÃ©couvrez des articles incroyables de notre communautÃ©</p>
            <hr class="my-4">
            {% if not app.user %}
                <a class="btn btn-primary btn-lg" href="{{ path('app_register') }}" role="button">Rejoignez-nous</a>
                <a class="btn btn-outline-primary btn-lg" href="{{ path('app_login') }}" role="button">DÃ©jÃ  membre ?</a>
            {% else %}
                <p class="lead">Bienvenue {{ app.user.firstName }} !</p>
            {% endif %}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 mx-auto">
        <h2 class="mb-4">Derniers Articles</h2>
        
        {% if posts %}
            <div class="row row-cols-1 row-cols-md-2 g-4">
                {% for post in posts %}
                    <div class="col">
                        <div class="card h-100 shadow-sm hover-shadow">
                            {% if post.picture %}
                                <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}" style="height: 200px; object-fit: cover;">
                            {% else %}
                                <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <span class="fs-1">ðŸ“„</span>
                                </div>
                            {% endif %}
                            <div class="card-body d-flex flex-column">
                                <span class="badge bg-primary mb-2" style="width: fit-content;">{{ post.category.name }}</span>
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p class="card-text text-muted flex-grow-1">{{ post.content|slice(0, 100) }}...</p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <small class="text-muted">{{ post.publishedAt|date('d M Y') }}</small>
                                    <a href="{{ path('app_post_show', {id: post.id}) }}" class="btn btn-sm btn-outline-primary">Lire la suite</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                Aucun article pour le moment. Revenez bientÃ´t !
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
