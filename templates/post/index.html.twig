{% extends 'base.html.twig' %}

{% block title %}Articles - MyBlog{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-lg-10 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Articles</h1>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_post_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus"></i> Nouvel Article
                </a>
            {% endif %}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 mx-auto">
        {% if posts %}
            <div class="row row-cols-1 g-4">
                {% for post in posts %}
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="row g-0">
                                {% if post.picture %}
                                    <div class="col-md-4">
                                        <img src="{{ post.picture }}" class="img-fluid rounded-start" alt="{{ post.title }}" style="height: 250px; object-fit: cover;">
                                    </div>
                                    <div class="col-md-8">
                                {% else %}
                                    <div class="col-md-12">
                                {% endif %}
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <h5 class="card-title">{{ post.title }}</h5>
                                                    <span class="badge bg-primary">{{ post.category.name }}</span>
                                                </div>
                                                {% if is_granted('ROLE_ADMIN') %}
                                                    <div class="btn-group" role="group">
                                                        <a href="{{ path('app_post_edit', {id: post.id}) }}" class="btn btn-sm btn-warning">Éditer</a>
                                                        <form method="post" action="{{ path('app_post_delete', {id: post.id}) }}" style="display:inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr ?')">Supprimer</button>
                                                        </form>
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <p class="card-text">{{ post.content|slice(0, 150) }}...</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">Par {{ post.author.firstName }} {{ post.author.lastName }} le {{ post.publishedAt|date('d M Y') }}</small>
                                                <a href="{{ path('app_post_show', {id: post.id}) }}" class="btn btn-sm btn-outline-primary">Lire la suite</a>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                Aucun article pour le moment. Revenez bientôt !
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
