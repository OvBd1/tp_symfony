{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - MyBlog{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8 mx-auto">
        {% if is_granted('ROLE_ADMIN') %}
            <div class="mb-3">
                <a href="{{ path('app_post_edit', {id: post.id}) }}" class="btn btn-warning btn-sm">Éditer</a>
                <form method="post" action="{{ path('app_post_delete', {id: post.id}) }}" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr ?')">Supprimer</button>
                </form>
            </div>
        {% endif %}

        <article class="mb-5">
            {% if post.picture %}
                <img src="{{ post.picture }}" class="img-fluid rounded mb-4" alt="{{ post.title }}" style="max-height: 400px; object-fit: cover; width: 100%;">
            {% endif %}

            <div class="mb-3">
                <span class="badge bg-primary fs-6">{{ post.category.name }}</span>
                <small class="text-muted d-block mt-2">
                    Par <strong>{{ post.author.firstName }} {{ post.author.lastName }}</strong> le {{ post.publishedAt|date('d F Y') }}
                </small>
            </div>

            <h1 class="mb-4">{{ post.title }}</h1>

            <div class="card bg-light mb-4 p-4">
                {{ post.content|nl2br }}
            </div>
        </article>

        <hr class="my-5">

        <!-- Comments Section -->
        <div class="comments-section">
            <h3 class="mb-4">Commentaires ({{ post.comments|length }})</h3>

            {% if app.user and is_granted('ROLE_USER') %}
                <div class="card mb-5 border-primary shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-chat-left-text"></i> Ajouter un Commentaire
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.content, 'Votre Commentaire', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Partagez vos pensées sur cet article...'}}) }}
                                {{ form_errors(form.content) }}
                                <small class="form-text text-muted">Votre commentaire sera examiné par un administrateur avant d'être publié.</small>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-send"></i> Envoyer le Commentaire
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            {% elseif not app.user %}
                <div class="alert alert-info mb-4">
                    <i class="bi bi-info-circle"></i> <a href="{{ path('app_login') }}" class="alert-link">Connectez-vous</a> pour ajouter un commentaire.
                </div>
            {% endif %}

            <div class="list-group">
                {% for comment in post.comments %}
                    {% if comment.status == 'approved' %}
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">{{ comment.author.firstName }} {{ comment.author.lastName }}</h6>
                                    <small class="text-muted">{{ comment.createdAt|date('d M Y H:i') }}</small>
                                </div>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <form method="post" action="{{ path('app_comment_delete', {id: comment.id}) }}" style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr ?')">Supprimer</button>
                                    </form>
                                {% endif %}
                            </div>
                            <p class="mb-0 mt-2">{{ comment.content }}</p>
                        </div>
                    {% endif %}
                {% endfor %}

                {% if post.comments|length == 0 %}
                    <div class="list-group-item">
                        <p class="text-muted">Aucun commentaire pour le moment. Soyez le premier à commenter !</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
