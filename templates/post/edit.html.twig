{% extends 'base.html.twig' %}

{% block title %}Modifier l'Article - MyBlog{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-body p-5">
                <h2 class="card-title mb-4">Modifier l'Article</h2>

                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger small mt-1">{{ form_errors(form.title) }}</div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.category) }}
                        {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                        <div class="text-danger small mt-1">{{ form_errors(form.category) }}</div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.picture) }}
                        {{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
                        <small class="form-text text-muted">Entrez l'URL de l'image</small>
                        <div class="text-danger small mt-1">{{ form_errors(form.picture) }}</div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.content) }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '8'}}) }}
                        <div class="text-danger small mt-1">{{ form_errors(form.content) }}</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_post_index') }}" class="btn btn-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">Mettre Ã  jour</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
