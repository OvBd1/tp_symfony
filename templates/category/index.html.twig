{% extends 'base.html.twig' %}

{% block title %}Categories - MyBlog{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-lg-10 mx-auto">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Categories</h1>
            <a href="{{ path('app_category_new') }}" class="btn btn-primary">New Category</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 mx-auto">
        {% if categories %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Posts Count</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.name }}</td>
                                <td>
                                    <span class="badge bg-info">{{ category.posts|length }}</span>
                                </td>
                                <td>
                                    <a href="{{ path('app_category_show', {id: category.id}) }}" class="btn btn-sm btn-info">View</a>
                                    <a href="{{ path('app_category_edit', {id: category.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                    <form method="post" action="{{ path('app_category_delete', {id: category.id}) }}" style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                No categories yet. <a href="{{ path('app_category_new') }}">Create one</a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
