{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - MyBlog{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-10 mx-auto">
        <div class="card shadow mb-4">
            <div class="card-body">
                <h1 class="card-title">{{ category.name }}</h1>
                {% if category.description %}
                    <p class="card-text">{{ category.description }}</p>
                {% endif %}
                <div class="btn-group" role="group">
                    <a href="{{ path('app_category_edit', {id: category.id}) }}" class="btn btn-warning">Éditer</a>
                    <form method="post" action="{{ path('app_category_delete', {id: category.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr ?')">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>

        <h3 class="mb-4">Articles de cette catégorie ({{ category.posts|length }})</h3>

        {% if category.posts %}
            <div class="row row-cols-1 g-4">
                {% for post in category.posts %}
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p class="card-text">{{ post.content|slice(0, 100) }}...</p>
                                <small class="text-muted">{{ post.publishedAt|date('d/m/Y') }}</small>
                                <div class="mt-3">
                                    <a href="{{ path('app_post_show', {id: post.id}) }}" class="btn btn-sm btn-outline-primary">Lire</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                Aucun article dans cette catégorie pour le moment.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
