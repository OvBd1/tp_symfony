{% extends 'base.html.twig' %}

{% block title %}Add Comment - MyBlog{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-body p-5">
                <h2 class="card-title mb-4">Add Comment to "{{ post.title }}"</h2>

                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.content, 'Your Comment') }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                        <div class="text-danger small mt-1">{{ form_errors(form.content) }}</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_post_show', {id: post.id}) }}" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
